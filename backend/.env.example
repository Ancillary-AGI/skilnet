# EduVerse Backend Configuration
# Copy this file to .env and update with your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-make-it-long-and-random
APP_URL=http://localhost:8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Choose your database: sqlite, postgresql, mysql, mongodb
DB_TYPE=postgresql

# PostgreSQL (Recommended for production)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=eduverse
POSTGRES_USER=eduverse_user
POSTGRES_PASSWORD=eduverse_password

# MySQL (Alternative)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=eduverse
MYSQL_USER=eduverse_user
MYSQL_PASSWORD=eduverse_password

# MongoDB (For document-based features)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=eduverse
MONGODB_USER=
MONGODB_PASSWORD=

# SQLite (Development only)
SQLITE_PATH=./database.db

# Cloud Database URL (overrides individual settings)
# DATABASE_URL=postgresql+asyncpg://user:password@host:port/database

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# SSL Settings (for cloud databases)
DB_SSL_MODE=prefer
# DB_SSL_CERT=/path/to/client-cert.pem
# DB_SSL_KEY=/path/to/client-key.pem
# DB_SSL_CA=/path/to/ca-cert.pem

# =============================================================================
# CLOUD STORAGE CONFIGURATION
# =============================================================================
# Choose your storage: local, aws_s3, google_cloud, azure_blob, cloudflare_r2
STORAGE_PROVIDER=aws_s3

# AWS S3 (Recommended)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=eduverse-storage

# Google Cloud Storage
# GCP_PROJECT_ID=your-project-id
# GCP_CREDENTIALS_PATH=/path/to/credentials.json
# GCP_BUCKET=eduverse-storage

# Azure Blob Storage
# AZURE_ACCOUNT_NAME=your-account-name
# AZURE_ACCOUNT_KEY=your-account-key
# AZURE_CONTAINER=eduverse-storage

# Cloudflare R2 (S3-compatible)
# CLOUDFLARE_R2_ACCESS_KEY=your-r2-access-key
# CLOUDFLARE_R2_SECRET_KEY=your-r2-secret-key
# CLOUDFLARE_R2_BUCKET=eduverse-storage
# CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# DigitalOcean Spaces
# DO_SPACES_KEY=your-spaces-key
# DO_SPACES_SECRET=your-spaces-secret
# DO_SPACES_BUCKET=eduverse-storage
# DO_SPACES_REGION=nyc3

# Local Storage (Development)
LOCAL_STORAGE_PATH=./uploads

# CDN Configuration
CDN_ENABLED=false
# CDN_BASE_URL=https://cdn.yourdomain.com

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes

# =============================================================================
# REDIS CACHE
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# AI SERVICES
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
# HUGGINGFACE_API_KEY=your-huggingface-key
# STABILITY_AI_API_KEY=your-stability-ai-key

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# =============================================================================
# PAYMENT PROCESSORS
# =============================================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # sandbox or live

# Razorpay (India)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
ANALYTICS_ENABLED=true
# MIXPANEL_TOKEN=your-mixpanel-token
# SENTRY_DSN=your-sentry-dsn

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ALLOWED_HOSTS=["localhost", "127.0.0.1", "yourdomain.com"]
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# =============================================================================
# CLOUD PROVIDER PRESETS
# =============================================================================
# Uncomment and configure for your cloud provider

# AWS RDS + S3
# DATABASE_URL=postgresql+asyncpg://username:password@your-rds-endpoint:5432/eduverse
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_S3_BUCKET=your-s3-bucket

# Google Cloud SQL + Cloud Storage
# DATABASE_URL=postgresql+asyncpg://user:password@/eduverse?host=/cloudsql/project:region:instance
# GCP_PROJECT_ID=your-project-id
# GCP_BUCKET=your-gcs-bucket

# Azure Database + Blob Storage
# DATABASE_URL=postgresql+asyncpg://user:password@server.postgres.database.azure.com:5432/eduverse
# AZURE_ACCOUNT_NAME=your-storage-account
# AZURE_ACCOUNT_KEY=your-storage-key

# Supabase (PostgreSQL + Storage)
# DATABASE_URL=postgresql+asyncpg://postgres:password@db.project.supabase.co:5432/postgres
# SUPABASE_URL=https://project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key

# PlanetScale (MySQL)
# DATABASE_URL=mysql+aiomysql://username:password@host/database?ssl_ca=/etc/ssl/certs/ca-certificates.crt

# MongoDB Atlas
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/eduverse?retryWrites=true&w=majority